<html:list
	id="dataTable"
	style="dataTable"
	name="log"
	checkbox="true"
	action="true"
	datasource="list"
	show="id:{%ID}|90px,nick_name:用户名,head_image|head_image:头像,create_time:加入时间,memo:备注,status|getStatus:状态"
	actionlist="id|user_edit=$log,"/>
